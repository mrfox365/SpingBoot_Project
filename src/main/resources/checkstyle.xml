<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Виключення файлів до початку перевірки -->
    <module name="BeforeExecutionExclusionFileFilter">
        <property name="fileNamePattern" value=".*\\(maper|model|repository|)\\.*\.java$"/>
    </module>

    <module name="TreeWalker">
        <module name="JavadocMethod"/>
        <module name="JavadocType"/>
        <module name="SimplifyBooleanExpression"/>
        <module name="EmptyBlock"/>
        <module name="FinalClass"/>
    </module>

    <module name="FileTabCharacter"/>
</module>
